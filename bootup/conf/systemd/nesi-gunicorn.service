[Unit]
Description=NESi gunicorn REST API server
After=network.target

[Service]
ExecStart=/opt/nesi/venv/bin/gunicorn -b "127.0.0.1:5000" \
  --env "NESI_CONFIG=/opt/nesi/etc/nesi.conf" \
  --access-logfile /opt/nesi/var/log/access.log \
  --error-logfile  /opt/nesi/var/log/error.log  \
  wsgi:app

Restart=on-failure
User=nesi

[Install]
WantedBy=multi-user.target
